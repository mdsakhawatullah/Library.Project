@model IEnumerable<Library.Management.Models.Student>
@{
	ViewData["Title"] = "Student List";
}

@if (TempData["SuccessMessage"] != null)
{
	<div class="alert alert-success alert-dismissible fade show" role="alert">
		@TempData["SuccessMessage"]
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>
}
<h2>@ViewData["Title"]</h2>

<table class="table table-hover table-striped">
	<thead class="table-primary">
		<tr>
			<th>Name</th>
			<th>Gender</th>
			<th>File Name</th>
			<th>Actions</th>
		</tr>
	</thead>
		<tbody>
			@foreach(var std in Model)
			{
				<tr>
					<td>@std.StudentName</td>
					<td>@std.Gender</td>
					<td>@std.FileName</td>
					<td>
					<a asp-action="Details" asp-route-id="@std.StudentId" class="btn btn-info btn-sm">Details</a>
					<a asp-action="Edit" asp-route-id="@std.StudentId" class="btn btn-warning btn-sm">Edit</a>
					<a asp-action="Delete" asp-route-id="@std.StudentId" class="btn btn-danger btn-sm">Delete</a>
					</td>
				</tr>
			}
		</tbody>
</table>
<a asp-action="Create" class="btn btn-primary">Add New Students</a>