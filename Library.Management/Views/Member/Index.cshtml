@model IEnumerable<Library.Management.Models.Member>

@{
	ViewData["Title"] = "Mmeber List";
}
@if (TempData["SuccessMessage"] != null)
{
	<div class="alert alert-success alert-dismissible fade show" role="alert">
		@TempData["SuccessMessage"]
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>
}
<h2>@ViewData["Title"]</h2>


<table class="table table-striped table-hover">
	<thead class="table-primary">
		<tr>
			<th>Name</th>
			<th>Gender</th>
			<th>Age</th>
			<th>FileName</th>
			<th>Actions</th>
		</tr>

	</thead>
	<tbody>
		@foreach(var member in Model)
		{
			<tr>
				<td>@member.MemberName</td>
				<td>@member.Gender</td>
				<td>@member.Age</td>
				<td>@member.FileName</td>
				<td>
					<a asp-action="Details" asp-route-id="@member.MemberId" class="btn btn-info btn-sm">Details</a>
					<a asp-action="Edit" asp-route-id="@member.MemberId" class="btn btn-warning btn-sm">Edit</a>
					<a asp-action="Delete" asp-route-id="@member.MemberId" class="btn btn-danger btn-sm">Delete</a>

				</td>
			</tr>
		}
	</tbody>

</table>
<a asp-action="Create" class="btn btn-primary">Add New Members</a>