@using Microsoft.AspNetCore.Identity
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Library.Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">LibraryManagement</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    @if (User.Identity.IsAuthenticated)
                    {

                        <li class="nav-item">
                            <a asp-area="" asp-controller="LibraryBook" asp-action="Index" class="nav-link"> Books</a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Member" asp-action="Index" class="nav-link"> Members</a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Student" asp-action="Index" class="nav-link"> Studnets</a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Staff" asp-action="Index" class="nav-link"> Staffs</a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="" asp-action="" class="nav-link"> Welcome, @User.Identity.Name?.Split('@')[0] ! </a>
                        </li>
                        <li class="nav-item">
                            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="nav-link d-inline"  style="padding: 0; border: none; background: none;">
                                <button type="submit" class="btn btn-link nav-link" style="none">
                                    Logout
                                </button>
                            </form>
                        </li>
                       
                    }
                    else
                    {
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Account" asp-action="Login" class="nav-link"> Login</a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Account" asp-action="Register" class="nav-link"> Register</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @RenderSection("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>